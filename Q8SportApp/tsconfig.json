{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017", "es2015", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "strictNullChecks": false,
    "target": "esnext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "**/android",
    "**/ios",
    "**/__tests__",
    "**/vendor"
  ]
}
